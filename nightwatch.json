{
  "src_folders" : ["live-tests/live-test-setup.js"],
  "output_folder" : "",
  "page_objects_path" : "./live-tests/page-objects",
  "custom_commands_path": ["./live-tests/utils"],

  "webdriver": {
    "start_process": true,
    "server_path" : "node_modules/.bin/chromedriver",
    "cli_args": ["--log", "debug"],
    "port": 9515
  },

  "test_settings" : {
    "default": {
      "globals": {
        "clientUrl": "http://localhost:9001",
        "waitForConditionPollInterval": 50
      },
      "test_runner": {
        "type": "mocha",
        "options": {
          "ui": "bdd",
          "reporter": "spec"
        }
      },
      "launch_url": "http://localhost:9100",
      "silent": true,
      "screenshots": {
        "enabled": false,
        "path": "./screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "w3c": false,
          "args": [
            "window-size=375,667"
          ]
        }
      }
    }
  }
}
