{
  "src_folders" : ["live-tests/live-test-setup.js"],
  "output_folder" : "",
  "page_objects_path" : "./live-tests/page-objects",
  "custom_commands_path": [
    "./live-tests/utils",
    "node_modules/nightwatch-custom-commands-assertions/js/commands"
  ],
	"custom_assertions_path" : "node_modules/nightwatch-custom-commands-assertions/js/assertions",

  "selenium" : {
    "start_process" : true,
    "server_path" : "./bin/selenium-server-standalone.jar",
    "log_path" : "",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "",
      "webdriver.ie.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "globals": {
        "clientUrl": "http://localhost:9001",
        "waitForConditionPollInterval": 50
      },
      "test_runner" : {
        "type" : "mocha",
        "options" : {
          "ui" : "bdd",
          "reporter" : "spec"
        }
      },
      "launch_url" : "http://localhost:9100",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : false,
        "path" : "./screenshots"
      },
      "desiredCapabilities" : {
        "browserName" : "chrome",
        "javascriptEnabled" : true,
        "acceptSslCerts" : true,
        "chromeOptions": {
          "args": [
            "window-size=375,667"
          ]
        }
      }
    }
  }
}
